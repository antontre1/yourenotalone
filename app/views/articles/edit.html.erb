<div class=container>

<%= simple_form_for [ @article ] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.association :theme %>
  <%= f.input :content %>
  <%= f.submit "Soumettre l'article", class: "btn purple white" %>
<% end %>

<%= link_to "Delete #{@article.title}",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to("Liste des articles", articles_path) %>

</div>
