<div class="container-general">
  <h3 class="container-title">Mes Articles Favoris</h3>

  <div class="mt-3">
    <% @favorites.where(favoritable_type: "Article").each do |favorite| %>
      <div class="card text-white  mb-3 container-general purple text-decoration-none" style="max-width: 18rem;">
        <h5><%= favorite.favoritable.title %></h5>
        <p><%= favorite.favoritable.description %></p>
      </div>
      <%= link_to("+favoris",favorite_path(favorite.id), method: :delete) %>
    <% end %>
  </div>
</div>
