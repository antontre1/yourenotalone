 <div id="page-wall" class="container-general">
    <div class="spacer">
    </div>
     <%= render partial: "shared/form_searchbar", locals: {placeholder_value: @placeholder_value, currentpath: @currentpath} %>
    <div class="cards-favorites">
      <div class="favorites-th-art">
        <div class="favorites-title">
          <div class="favorite-title-col">
           <%= image_tag('bookmark-alone-purple.svg') %>
           <span>Th√®mes <%= @scope %></span>
          </div>
          <%= link_to  image_tag('arrow-double-fat.svg'), favorites_th_path %>
        </div>
        <div class="micro-themes-list">
            <% @themes.each do |theme| %>
            <a href="<%= theme_path(theme) %>">
            <div class="micro-theme-card" style="background: url(
              <% if (theme.picture.attached?) %>
                  <%= cl_image_path(theme.picture.key) %>
                <% else %>
                  <%= image_path('frontlorem.jpg') %>
                <% end %>
                  ), #F4EAF8; background-repeat: no-repeat; background-size: 80% 4rem; background-position: 50% 10%;">
              <span><%= theme.title %></span>
              <div class="counter">
                <%= image_tag('eye.svg') %>
                <%= Favorite.where(favoritable_id: theme.id).count %>
              </div>
            </div>
            </a>
             <% end %>
        </div>
             <div class="favorites-users">
        <div class="favorites-title">
          <div class="favorites-title-col">
            <%= image_tag('heart.svg') %>
            <span>Personnes <%= @scope %></span>
          </div>
          <%= link_to image_tag('arrow-double-fat.svg'), favorites_art_path %>
        </div>
        <div class="mini-user-list mini-user-no-border">
        <% @users.each do |user| %>
          <div class="mini-user">
            <% if (user.picture.attached?) %>
            <%= cl_image_tag(user.picture.key, class: 'avatar-large') %>
              <% else %>
            <%= image_tag('avatar.png', class: 'avatar-large') %>
            <% end %>
            <span class="mini-user-name"><%= user.username %></span>
          </div>
          <% end %>
        </div>
    </div>
        <div class="articles-list">
          <div class="favorites-title">
            <div class="favorites-title-col">
              <%= image_tag('heart.svg') %>
              <span>Articles <%= @scope %></span>
            </div>
            <div class="articles-link-all">
              <%= link_to  image_tag('arrow-double-fat.svg'), favorites_art_path%>
            </div>
          </div>
          <% @articles.each do |article| %>
          <a href="<%= article_path(article) %>">
          <div class="mini-articles-card">
              <div class="art-description">
                <span class="art-title"><%= article.title %></span>
                <div class="art-th-description">
                  <span class="art-theme"><%= article.theme.title %></span>
                  <%= link_to image_tag('ellipse.svg', class: 'ellipse-th') %>
                  <span class="art-created">Il y a <%= TimeDifference.between(article.updated_at, Time.now).in_days.round %> jours</span>
                </div>
              </div>
              <% if (article.picture.attached?) %>
                <%= cl_image_tag(article.picture.key, class: 'mini-article-img') %>
              <% else %>
                <%= image_tag('avatar.png', class: 'mini-article-img') %>
              <% end %>
          </div>
          </a>
          <% end %>

        </div>
      </div>
    </div>



</div>
